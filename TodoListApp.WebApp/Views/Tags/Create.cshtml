@using Microsoft.AspNetCore.Mvc.TagHelpers
@model TodoListApp.WebApp.Models.TagDto
@{
    ViewData["Title"] = "Створити тег";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card border-0 shadow-lg tag-create-card">
                <div class="card-header bg-transparent border-0 py-4">
                    <div class="d-flex align-items-center">
                        <a asp-action="Index" class="btn btn-sm btn-outline-secondary me-3 tag-back-btn">
                            <i class="bi bi-arrow-left"></i>
                        </a>
                        <h2 class="h4 mb-0 text-primary tag-create-title">Створити новий тег</h2>
                    </div>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-4 tag-input-group">
                            <label for="Name" class="form-label fw-semibold">Назва тегу</label>
                            <input asp-for="Name" class="form-control form-control-lg tag-name-input"
                                   placeholder="Введіть назву тегу..." />
                            <span asp-validation-for="Name" class="text-danger mt-2"></span>
                        </div>

                        <div class="d-flex gap-3 pt-2 tag-buttons">
                            <button type="submit" class="btn btn-primary btn-lg px-5 tag-submit-btn">
                                <i class="bi bi-plus-circle me-2"></i>Створити
                            </button>
                            <a class="btn btn-outline-secondary btn-lg px-4 tag-cancel-btn" asp-action="Index">
                                Скасувати
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.tag-create-card {
    border-radius: 1rem;
    background: #fff;
}

.tag-create-title {
    background: linear-gradient(135deg, #0d6efd, #6610f2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 700;
}

.tag-input-group .form-control {
    border: 2px solid #e9ecef;
    border-radius: 0.5rem;
    transition: all 0.3s ease;
}

.tag-input-group .form-control:focus {
    border-color: #0d6efd;
    box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    transform: translateY(-2px);
}

.tag-back-btn, .tag-submit-btn, .tag-cancel-btn {
    border-radius: 0.5rem;
    font-weight: 500;
    transition: all 0.3s ease;
}

.tag-back-btn:hover {
    transform: translateX(-3px);
}

.tag-submit-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
}

.tag-cancel-btn:hover {
    transform: translateY(-2px);
    border-color: #0d6efd;
    color: #0d6efd;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Add pulse animation to submit button
    const submitBtn = document.querySelector('.tag-submit-btn');
    if (submitBtn) {
        setInterval(() => {
            submitBtn.style.transform = 'translateY(-2px) scale(1.02)';
            setTimeout(() => {
                submitBtn.style.transform = 'translateY(-2px) scale(1)';
            }, 500);
        }, 3000);
    }

    // Input focus effects
    const tagInput = document.querySelector('.tag-name-input');
    if (tagInput) {
        tagInput.addEventListener('focus', function() {
            this.style.transform = 'translateY(-2px)';
            this.style.boxShadow = '0 5px 15px rgba(13, 110, 253, 0.3)';
        });
        tagInput.addEventListener('blur', function() {
            this.style.transform = 'translateY(0)';
            this.style.boxShadow = 'none';
        });
    }

    // Back button hover effect
    const backBtn = document.querySelector('.tag-back-btn');
    if (backBtn) {
        backBtn.addEventListener('mouseenter', function() {
            this.style.transform = 'translateX(-3px)';
        });
        backBtn.addEventListener('mouseleave', function() {
            this.style.transform = 'translateX(0)';
        });
    }
});
</script>