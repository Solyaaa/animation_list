@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ListItemDto
@{
    ViewData["Title"] = "Edit List";
}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm edit-card">
                <div class="card-header bg-transparent border-0 py-4">
                    <div class="d-flex align-items-center">
                        <a href="/Lists" class="btn btn-sm btn-outline-secondary me-3">
                            <i class="bi bi-arrow-left"></i>
                        </a>
                        <h2 class="h4 mb-0 text-primary">Edit List</h2>
                    </div>
                </div>
                <div class="card-body p-4">
                    <form method="post" class="vstack gap-4">
                        <div>
                            <label asp-for="Title" class="form-label fw-semibold">List Title</label>
                            <input asp-for="Title" class="form-control" required />
                        </div>
                        <div>
                            <label asp-for="Description" class="form-label fw-semibold">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        </div>
                        <div class="d-flex gap-3 pt-2">
                            <button class="btn btn-primary px-4" type="submit">
                                <i class="bi bi-check-lg me-2"></i>Save Changes
                            </button>
                            <a class="btn btn-outline-secondary px-4" href="/Lists">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.edit-card {
    border-radius: 1rem;
}

.edit-card .form-control {
    border: 2px solid #e9ecef;
    border-radius: 0.5rem;
    padding: 0.75rem;
    transition: all 0.3s ease;
}

.edit-card .form-control:focus {
    border-color: #0d6efd;
    box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
}
</style>