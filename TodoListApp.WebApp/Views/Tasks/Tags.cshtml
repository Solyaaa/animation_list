@using Microsoft.AspNetCore.Mvc.TagHelpers
@model TodoListApp.WebApp.Models.PagedResponse<TodoListApp.WebApp.Models.TagDto>
@{
    ViewData["Title"] = "Теги";
}

<div class="container-fluid py-4">
    <div class="d-flex align-items-center justify-content-between mb-4 task-tags-header">
        <div class="d-flex align-items-center gap-3">
            <a class="btn btn-sm btn-outline-secondary task-home-btn"
               asp-controller="Lists" asp-action="Index">
                <i class="bi bi-house"></i>
            </a>
            <h2 class="mb-0 text-primary task-tags-title">
                <i class="bi bi-tags me-2"></i>Теги
            </h2>
        </div>
    </div>

    <div class="card border-0 shadow-sm task-tags-card">
        <div class="card-body">
            <div class="d-flex flex-wrap gap-3 task-tags-container">
                @foreach (var t in Model.Items)
                {
                    <span class="badge rounded-pill task-tag-pill px-4 py-2">
                        <i class="bi bi-tag me-2"></i>@t.Name
                    </span>
                }
            </div>
        </div>
    </div>

    <div class="alert alert-info mt-4 task-tags-info">
        <i class="bi bi-info-circle me-2"></i>
        Видаляти/додавати теги можна з картки задачі на сторінці списку.
    </div>
</div>

<style>
.task-tags-header {
    border-bottom: 2px solid #e9ecef;
    padding-bottom: 1rem;
}

.task-tags-title {
    background: linear-gradient(135deg, #0d6efd, #6610f2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 700;
}

.task-tags-card {
    border-radius: 1rem;
}

.task-tag-pill {
    background: linear-gradient(135deg, #0d6efd, #6610f2);
    color: white;
    font-size: 1rem;
    transition: all 0.3s ease;
    cursor: pointer;
}

.task-tag-pill:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 8px 16px rgba(13, 110, 253, 0.3);
}

.task-home-btn {
    border-radius: 0.5rem;
    transition: all 0.3s ease;
}

.task-home-btn:hover {
    transform: translateX(-3px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
}

.task-tags-info {
    border-radius: 0.5rem;
    border: none;
    background: #e7f3ff;
    color: #0a58ca;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Tag pill hover effects
    const tagPills = document.querySelectorAll('.task-tag-pill');
    tagPills.forEach(pill => {
        pill.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-3px) scale(1.05)';
            this.style.boxShadow = '0 8px 16px rgba(13, 110, 253, 0.3)';
        });
        pill.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0) scale(1)';
            this.style.boxShadow = 'none';
        });
    });

    // Home button hover effect
    const homeBtn = document.querySelector('.task-home-btn');
    if (homeBtn) {
        homeBtn.addEventListener('mouseenter', function() {
            this.style.transform = 'translateX(-3px)';
            this.style.boxShadow = '0 4px 8px rgba(0,0,0,0.2)';
        });
        homeBtn.addEventListener('mouseleave', function() {
            this.style.transform = 'translateX(0)';
            this.style.boxShadow = 'none';
        });
    }

    // Add click animation to tags
    tagPills.forEach(pill => {
        pill.addEventListener('click', function() {
            this.style.transform = 'scale(0.95)';
            setTimeout(() => {
                this.style.transform = 'scale(1)';
            }, 150);
        });
    });
});
</script>